<!--pages/text/text.wxml-->
<!--1.textz组件基本使用:不会自动换行，换行需要加上 \n -->
<text>Hello Text\n</text>
<text>你好小程序</text>

<!--2.默认情况下text中的文本长按是不能选中的-->
<!--以下两种都可以让本文可被长按选择-->
<text selectable="{{true}}">Hello Capjie \n</text>
<text selectable>Hello Capjie \n</text>

<!--space:确定文本空格大小-->
<!--ensp：半个中文字符的大小-->
<!--emsp：一个中文字符的大小-->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="emsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>

<!--4.decode属性:是否解码文本-->
<text decode>5 &gt; 3</text><!---5>3->